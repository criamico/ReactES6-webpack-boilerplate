{
  "name": "ReactES6-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate to configure basic react project with webpack, babel and sass. ",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "npm run clean && ./node_modules/webpack/bin/webpack.js -p  --config webpack_prod.config.js",
    "dev": "./node_modules/webpack-dev-server/bin/webpack-dev-server.js --hot --progress --colors --inline",
    "lint": "esw webpack.config.* src tools --color"
  },
  "author": "criamico",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/criamico/ReactES6-webpack-boilerplate"
  },
  "dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "webpack": "^2.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^6.4.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.27.3",
    "eslint": "^3.19.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.10.1",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.5.3",
    "react-hot-loader": "^1.3.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.13.2",
    "webpack-dev-server": "^2.9.1",
    "webpack-uglify-js-plugin": "^1.1.9"
  }
}
