{
  "name": "ReactES6-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate to configure basic react project with webpack, babel and sass.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "./node_modules/webpack/bin/webpack.js -p  --config webpack_prod.config.js --progress --profile --colors",
    "clean-build": "npm run clean && ./node_modules/webpack/bin/webpack.js -p  --config webpack_prod.config.js",
    "dev": "./node_modules/webpack-dev-server/bin/webpack-dev-server.js --progress --watch --colors --inline",
    "test": "karma start --auto-watch",
    "test-ci": "karma start --singleRun --browsers ChromeHeadless --colors false",
    "lint": "esw webpack.config.* src tools --color",
    "http-server": "http-server dist -p 8000"
  },
  "author": "criamico",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/criamico/ReactES6-webpack-boilerplate"
  },
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-react": "^7.10.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "0.11.1",
    "jasmine": "^3.1.0",
    "jasmine-enzyme": "^6.0.2",
    "karma": "^2.0.5",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.1.2",
    "karma-jasmine-html-reporter": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.2",
    "npm-check": "^5.7.1",
    "null-loader": "^0.1.1",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.16.3",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  }
}
